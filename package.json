{
  "name": "bulk-email-sender",
  "version": "2.0.0",
  "description": "Web-based bulk email sender with user management and WYSIWYG editor",
  "main": "src/app.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "bun run --watch src/app.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "bun build src/app.ts --outdir=dist",
    "start": "bun run src/app.ts",
    "clean": "rm -rf dist uploads/* logs/* data/users.db",
    "reset-db": "rm -f data/users.db data/scheduler.db",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "email",
    "bulk-email",
    "smtp",
    "nodemailer",
    "bun",
    "typescript",
    "authentication",
    "user-management"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/bun": "^1.3.4",
    "@types/node": "^25.0.0",
    "argon2": "^0.31.2",
    "csv-stringify": "^6.4.4",
    "dotenv": "^16.3.1",
    "hono": "^3.12.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "concurrently": "^9.2.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
